<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:padding="20dp"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    tools:context="edu.upc.eseiaat.pma.fakephone.FakePhoneActivity">

    <Button
        android:id="@+id/boto_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="1"
        android:layout_below="@+id/numero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/boto_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:onClick="clicat"
        android:text="2"
        android:layout_alignBaseline="@+id/boto_1"
        android:layout_alignBottom="@+id/boto_1"
        android:layout_toRightOf="@+id/boto_1"
        android:layout_toEndOf="@+id/boto_1" />

    <Button
        android:id="@+id/boto_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="3"
        android:layout_alignBaseline="@+id/boto_1"
        android:layout_alignBottom="@+id/boto_1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/boto_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="4"
        android:layout_alignBaseline="@+id/boto_5"
        android:layout_alignBottom="@+id/boto_5"
        android:layout_toLeftOf="@+id/boto_2"
        android:layout_toStartOf="@+id/boto_2" />

    <Button
        android:id="@+id/boto_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="5"
        android:layout_alignBaseline="@+id/boto_6"
        android:layout_alignBottom="@+id/boto_6"
        android:layout_alignLeft="@+id/boto_2"
        android:layout_alignStart="@+id/boto_2" />

    <Button
        android:id="@+id/boto_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="6"
        android:layout_below="@+id/boto_3"
        android:layout_alignLeft="@+id/boto_3"
        android:layout_alignStart="@+id/boto_3"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/boto_7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="7"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/boto_4"
        android:layout_toLeftOf="@+id/boto_2"
        android:layout_toStartOf="@+id/boto_2" />

    <Button
        android:id="@+id/boto_8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="8"
        android:layout_alignBaseline="@+id/boto_7"
        android:layout_alignBottom="@+id/boto_7"
        android:layout_alignLeft="@+id/boto_5"
        android:layout_alignStart="@+id/boto_5" />

    <Button
        android:id="@+id/boto_9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="9"
        android:layout_alignBaseline="@+id/boto_7"
        android:layout_alignBottom="@+id/boto_7"
        android:layout_alignLeft="@+id/boto_6"
        android:layout_alignStart="@+id/boto_6" />

    <Button
        android:id="@+id/boto_0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="clicat"
        android:text="0"
        android:layout_below="@+id/boto_8"
        android:layout_alignLeft="@+id/boto_8"
        android:layout_alignStart="@+id/boto_8"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/esborrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="esborra" />

    <Button
        android:id="@+id/trucar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="truca" />

</RelativeLayout>
